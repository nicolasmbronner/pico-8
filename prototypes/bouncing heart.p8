function _init()
end

function _update60()
	x=x+xspeed
	y=y+yspeed
	col=col+1
	
	--if ♥ hits the edges,
	--than reverse direction
	if x>122 then
		xspeed=-0.5
	end
	
	if x<0 then
		xspeed=0.5
	end
	
	if y>122 then
		yspeed=-0.5
	end
	
	if y<0 then
		yspeed=0.5
	end
end

function _draw()
	cls()
	print(hero,x,y,col)
end
