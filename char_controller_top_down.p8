version 42
__lua__
function _init()
	x=64 y=64 dx=0 dy=0 s=1 d=1.15	
end


function _update60()

	local buttpress_h=false
	local buttpress_v=false
	
	if(btn(⬅️)) then 
		dx=-s
		buttpress_h=true
	end
	
	if(btn(➡️)) then
	 dx=s
	 buttpress_h=true
	end
	
	if(btn(⬆️)) then
		dy=-s
		buttpress_v=true
	end
	
	if(btn(⬇️)) then
	 dy=s
	 buttpress_v=true
	end
	
	if not(buttpress_h) then
		dx/=d
	end
	
	if not(buttpress_v) then
		dy/=d
	end
	
	x+=dx
	y+=dy
	
	x=mid(3,x,124)
	y=mid(3,y,124)
	
end

function _draw()
	cls(1)
	circfill(x,y,3,8)
end
